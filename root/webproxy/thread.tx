<html>
<head>
<meta name="viewport" content="width=device-width" />
<style>
div.thumbnail img {
    max-width: 90%;
}
div.thumbnail {
    text-align: center;
}
body {
    background-color: #222;
    color: #FFFFFF;
    font-size: larger;
}
div.head, div.post {
    padding: 0.8em;
}
div.post {
    border-top: 1px solid #555555;
}
div.post .meta {
    color: #999999;
    padding-bottom: 0.5em;
}
div.thumbnail a img {
    padding: 1px;
    border: 1px solid #666;
}
</style>
</head>
<body>
<div class="thumbnail"><a href="<: $thread.image_url :>"><img src="<: $thread.thumbnail_url :>"></a></div>
<div class="head">
: $thread.body | html_br
</div>
: for $thread.posts -> $post {
  <div class="post">
    <div class="meta">#<: $post.head.no :> <: $post.datetime :></div>
  : $post.body | html_br
  </div>
: }
</body>
</html>
